<% provide( :page_header, 'Fee Schedules' ) %>

<%= link_to 'New Fee Schedule', new_fee_schedule_path, class: "btn btn-primary" %>
<br><br>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Item Type</th>
    <th>Base Fee</th>
    <th>Fee Per Day</th>
    <th class="min-width">Actions</th>
  </tr>
  <% @fee_schedules.each do |fee_schedule| %>
    <tr>
      <td><%= fee_schedule.item_type.name if fee_schedule.item_type %></td>
      <td><%= number_to_currency fee_schedule.base_amount %></td>
      <td><%= number_to_currency fee_schedule.amount_per_day %></td>
      <td class="min-width">
        <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), fee_schedule, class: "btn btn-xs btn-success" %>
        <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-edit")+" Edit"), edit_fee_schedule_path(fee_schedule), class: "btn btn-xs btn-primary" %>
        <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-trash")+" Delete"), fee_schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

