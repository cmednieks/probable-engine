<% provide( :page_header, @fee_schedule.item_type.name ) if @fee_schedule.item_type %>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Item Type</label>
  <span class="form-control-static"><%= @fee_schedule.item_type.name %></span>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Base Fee</label>
  <span class="form-control-static"><%= number_to_currency @fee_schedule.base_amount %></span>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Fee Per Day</label>
  <span class="form-control-static"><%= number_to_currency @fee_schedule.amount_per_day %></span>
</div>

<div class="form-group col-xs-12">
  <div class="col-xs-offset-2">
    <%= link_to 'Edit Fee Schedule', edit_fee_schedule_path(@fee_schedule), class: "btn btn-primary" %>
    <%= link_to 'Back', fee_schedules_path, class: "btn btn-default" %>
  </div>
</div>
