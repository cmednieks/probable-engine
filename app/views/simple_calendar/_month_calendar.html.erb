<div class="simple-calendar container">
  <div class="calendar-heading row">
    <div class="col-lg-2- col-md-2 col-sm-2 col-xs-2" align="left">
      <%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view %>
    </div>
    <span class="calendar-title col-lg-8- col-md-8 col-sm-8 col-xs-2" align="center">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
    </span>
    <div class="col-lg-2- col-md-2 col-sm-2 col-xs-2" align="right">
      <%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view %></div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
              <% else %>
                <% block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
