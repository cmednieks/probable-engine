<%= form_for @reservation, method: :post do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :type, 'Type', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.text_field :type, class: 'form-control', required: true %>
    </div>
  </div>

<% require 'pry'; binding.pry %>
  <div class="form-group col-xs-12">
    <%= f.label :item_type, 'Item Type', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.select :item_type_id, options_from_collection_for_select(@item_types, "id", "name"), {}, class: "selectpicker form-control", onchange: "update_disclaimer(this)" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :end_time, 'End Time', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= date_field_tag :end_time, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to 'Back', reservations_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
