<% provide( :page_header, 'Reservation' ) %>

<%= link_to 'New Reservation', new_reservation_path, class: "btn btn-primary" %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Reservation Type</th>
      <th>Item Type</th>
      <th>Item</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
    </tr>
  </thead>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.reservation_type %></td>
        <td><%= reservation.item_type.name %></td>
        <td><%= reservation.item.name %></td>
        <td><%= number_to_currency reservation.start_time %></td>
        <td><%= number_to_currency reservation.end_time %></td>
        <td>
            <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), reservation, class: "btn btn-xs btn-success" %>
            <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-edit")+" Edit"), edit_reservation_path(reservation), class: "btn btn-xs btn-primary" %>
            <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-ban-circle")+"Delete"), reservation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  <tbody>
  </tbody>
</table>
