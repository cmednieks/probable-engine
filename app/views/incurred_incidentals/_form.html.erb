<%= form_for([@rental, @incidental]) do |f| %>
  <%= f.label :incidental_type_id, "Incident type" %>
  <%= f.select :incidental_type_id,
      options_for_select(IncidentalType.all.collect {|t| [t.name, t.id]}, @incidental.incidental_type_id),
      required: true, prompt: true %>

  <%= f.label :times_modified %>
  <%= f.text_field :times_modified, required: true %>

  <%= f.fields_for :note do |n| %>
    <%= n.label :note %>
    <%= n.text_field :note %>
  <% end %>

  <%= f.label :documents %>
  <%= f.text_field :documents %>

  <%= f.submit %>
<% end %>
