<% provide( :page_header, "Incidental" ) %>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Incidental Type</label>
  <div class="form-control-information col-xs-10"><%= @incidental.incidental_type.name %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Fee</label>
  <div class="form-control-information col-xs-10"><%= @incidental.fee %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Times Modified</label>
  <div class="form-control-information col-xs-10"><%= @incidental.times_modified %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Notes</label>
  <div class="form-control-information col-xs-10">
    <% @incidental.notes.reverse_each do |n| %>
      <div class="form-control-information"><%= n.updated_at.strftime("%T - %e %b, %Y") %>: <%= n.note %></div>
    <% end %>
  </div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Documents</label>
  <div class="form-control-information col-xs-10"><%= @incidental.documents %></div>
</div>

<div class="form-group col-xs-12">
  <label class="col-xs-2 control-label">Active?</label>
  <div class="form-control-information col-xs-10"><%= @incidental.is_active? %></div>
</div>

<div class="form-group col-xs-12">
  <div class="col-xs-offset-2 col-xs-10">
    <%= link_to 'Edit', edit_rental_incurred_incidental_path(@rental, @incidental), class: "btn btn-primary" %>
    <%= link_to 'Back', rental_incurred_incidentals_path, class: "btn btn-default" %>
  </div>
</div>
