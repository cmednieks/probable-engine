<% provide( :page_header, 'Incidental Type' ) %>

<%= link_to 'New Incidental Type', new_incidental_type_path, class: "btn btn-primary" %>
<br><br>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th class="min-width">Actions</th>
  </tr>
  <% @incidental_types.each do |incidental_type| %>
    <tr>
      <td><%= incidental_type.name %></td>
      <td><%= incidental_type.description %></td>
      <td class="min-width">
        <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-eye-open")+" View"), incidental_type, class: "btn btn-xs btn-success" %>
        <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-edit")+" Edit"), edit_incidental_type_path(incidental_type), class: "btn btn-xs btn-primary" %>
        <%= link_to (content_tag(:span, nil, class: "glyphicon glyphicon-trash")+" Delete"), incidental_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>
