<%= form_for(@item) do |f| %>
  <div class="form-group col-xs-12">
    <%= f.label :name, 'Name', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :item_type_name, 'Type', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.text_field :item_type_name, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :item_type_base_fee, 'Base Fee', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.number_field :item_type_base_fee, class: 'form-control', min: 0, step: 0.01, required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :item_type_fee_per_day, 'Fee Per Day', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.number_field :item_type_fee_per_day, class: 'form-control', min: 0, step: 0.01, required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :item_type_disclaimer, 'Disclaimer', class: 'control-label col-xs-2' %>
    <div class="col-xs-6">
      <%= f.text_area :item_type_disclaimer, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="form-group col-xs-12">
    <div class="col-xs-offset-2 col-xs-10">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', items_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
